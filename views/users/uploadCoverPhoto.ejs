<!DOCTYPE html>
<html lang="en">
  <head>
 
    <!-- CSS -->
    <link rel="stylesheet" href="/style/uploadPhoto.css" />
    <title>Upload Cover Photo</title>
  </head>
  <body>
    <%- include("../partials/navbar.ejs") %>
    <div class="form-container">
      <!-- icon -->
      <h1>Upload Cover photo</h1>
   
        <!-- upload icon -->
       <p>
        <% if (data && data.type=="error") { %>
          <small class="error">
              <i class="fas fa-exclamation-circle"></i>
              <%= data.error %>
          
          </small>
    
          <% } else if(data && data.type=="success") { %>
            <small style="color: green;">
            
              <h4>
                <i class="fa-solid fa-check"></i>
                <%= data.error %>
              </h4>
            </small>
          <% } %>
       </p>
      
      <form action="/api/v1/users/cover-photo-upload?_method=PUT" method="POST" 
      enctype="multipart/form-data"
      >
        <label for="email">Select Image</label>
        <input type="file" name="cover-photo" id="image" />
        <button type="submit" value="upload">
          <i class="fas fa-upload"></i>
        </button>
      </form>
    </div>
    <%- include("../partials/footer.ejs") %>
  </body>
</html>
